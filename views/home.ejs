<%- include partials/header%>
<h1>Home</h1>
<% users.forEach(user => { %>
    <h2><%= user %></h2>
<% }) %>
<p><%=homeStartingContent %></p>
<% posts.forEach(post => { %>
    <h1><%= post.title %></h1>   
    <% if(post.post.length < 100){ %>
        <p> <%= post.post %> </p>
        <%  } else { %>
    <p> <%= post.post.substring(0,100) + ' ...' %></p>  
    <% } %>
    <span><a href='/posts/<%= post.title %>'> Read more</a></span>
    <% }) %>
<%- include partials/footer%>
